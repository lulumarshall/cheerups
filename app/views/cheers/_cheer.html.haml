%li{:id => "cheer-#{cheer.id}"}

  // insert user's avatar here
  %span.user= link_to cheer.user.username, cheer.user
  %span.content= cheer.cheerup
  
- model_class = Cheer
.page-header
  %h1=t '.title', :default => model_class.model_name.human.pluralize.titleize
%table.table.table-striped
  %thead
    %tr
      %th= model_class.human_attribute_name(:id)
      %th= model_class.human_attribute_name(:user_id)
      %th= model_class.human_attribute_name(:cheerup)
      %th= model_class.human_attribute_name(:created_at)
      %th=t '.actions', :default => t("helpers.actions")
  %tbody
    - @cheers.each do |cheer|
      %tr
        %td= link_to cheer.id, cheer_path(cheer)
        %td= cheer.user_id
        %td= cheer.cheerup
        %td=l cheer.created_at
        %td
          = link_to t('.edit', :default => t("helpers.links.edit")), edit_cheer_path(cheer), :class => 'btn btn-mini'
          = link_to t('.destroy', :default => t("helpers.links.destroy")), cheer_path(cheer), :method => :delete, :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, :class => 'btn btn-mini btn-danger'

= link_to t('.new', :default => t("helpers.links.new")), new_cheer_path, :class => 'btn btn-primary'


  %span.timestamp
    Posted #{time_ago_in_words(cheer.created_at)} ago.
  .show= link_to 'Show', cheer
  .edit= link_to 'Edit', edit_cheer_path(cheer)
  .destroy= link_to 'Destroy', cheer, :method => :delete, :data => { :confirm => 'Are you sure?' }     
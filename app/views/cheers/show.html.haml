- model_class = Cheer
.page-header
  %h1=t '.title', :default => model_class.model_name.human.titleize

%p
  %strong= model_class.human_attribute_name(:user_id) + ':'
  %br
  = @cheer.user_id
%p
  %strong= model_class.human_attribute_name(:cheerup) + ':'
  %br
  = @cheer.cheerup

.form-actions
  = link_to t('.back', :default => t("helpers.links.back")), cheers_path, :class => 'btn'
  = link_to t('.edit', :default => t("helpers.links.edit")), edit_cheer_path(@cheer), :class => 'btn'
  = link_to t('.destroy', :default => t("helpers.links.destroy")), cheer_path(@cheer), :method => "delete", :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, :class => 'btn btn-danger'

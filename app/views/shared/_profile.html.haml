- provide(:title, @title)
.user_info
  = image_tag gravatar_for(@user), class: "large-avatar"
  %h6.username_main= link_to @user.username
  %p.description= @user.description
  = render 'follow_form'
  %span
    %b Cheers:
    = @user.cheers.count
.stats
  = render 'shared/stats'
  - if @users.any?
    .user_avatars
      - @users.each do |user|
        =link_to (image_tag gravatar_for(user)), user_path(user)

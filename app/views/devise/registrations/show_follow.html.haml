- provide(:title, @title)
.row
  %aside.col-md-4
    %section.user_info
      = image_tag gravatar_for @user
      %h1= @user.username
      %span= link_to "view my profile", @user
      %span
        %b Cheers:
        = @user.cheers.count
    %section.stats
      = render 'shared/stats'
      / - if @users.any?
      /   .user_avatars
      /     - @users.each do |user|
      /       = link_to image_tag gravatar_for(user)
  .col-md-8
    %h3= @title
    - if @users.any?
      %ul.users
        = render @users

- unless current_user?(@user)
  #follow_form
    - if current_user.following?(@user)
      %button.btn.unfollow{data: {id: "#{current_user.active_relationships.where("followed_id= ?", @user.id).first.id}", value: "#{current_user.active_relationships.count}"}} unfollow
    - else
      %button.btn.btn-primary.follow{data: {value: "#{current_user.passive_relationships.count}"}} follow
